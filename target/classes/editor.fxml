<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.svs.ui.controller.EditorController">

    <top>
        <ToolBar>
            <Button fx:id="btnSave" text="Save"/>
            <Button fx:id="btnLoad" text="Load"/>
            <Button fx:id="btnAddPlace" text="Add Place"/>
            <Button fx:id="btnAddTransition" text="Add Transition"/>
            <Button fx:id="btnLink" text="Linkage"/>
            <Button fx:id="btnSimulate" text="Start Simulation"/>
            <Button fx:id="btnSimulateStop" text="Stop Simulation"/>
            <Button fx:id="btnDeleteNode" text="Delete Node"/>
            <Button fx:id="btnDeleteAll" text="Delete All"/>
        </ToolBar>
    </top>

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true">
            <Pane fx:id="canvas"
                  prefWidth="1200"
                  prefHeight="800"
                  style="-fx-background-color: #fafafa;
                         -fx-border-color: #ccc;
                         -fx-border-width: 1;" />
        </ScrollPane>
    </center>

    <right>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <Label text="Simulation Panel" style="-fx-font-weight: bold;"/>
                <Label fx:id="simulationStatus" text="(not started)"/>
                <ListView fx:id="transitionList" prefHeight="200"/>
                <!--                 
                <Label text="Marking"/>
                <ListView fx:id="markingEvolution" prefHeight="200"/>
                 -->
            </children>
        </VBox>
    </right>

</BorderPane>